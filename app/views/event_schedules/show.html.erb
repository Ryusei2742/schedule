<% if flash[:notice] %>
  <div><%= notice %></div>
<% end %>

<div class="max-w-lg mx-auto shadow-md p-6 rounded">
  <h2 class="text-2xl font-bold mb-4"><%= @event_schedule.title %></h2>
  <p><strong>開始日:</strong> <%= @event_schedule.start_date %></p>
  <p><strong>終了日:</strong> <%= @event_schedule.end_date %></p>
  <p><strong>終日</strong><%= @event_schedule.all_day ? '⚪︎' : '' %></p>
  <p><strong>メモ:</strong></p>
  <p class="whitespace-pre-line"><%= @event_schedule.memo %></p>

  <div class="mt-4 flex justify-end space-x-2">
    <%= link_to "編集", edit_event_schedule_path(@event_schedule), class: "bg-yellow-500 text-white px-4 py-2 rounded hover:bg-yellow-600" %>
    <%= link_to "削除", event_schedule_path(@event_schedule), { method: :delete, data: { confirm: '削除しますか？' } } %>
  </div>
</div>
